<h1><%= @employee.first_name%>'s Details</h1>
<head>
  <style>
    body{
      text-align:center;
    }
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding:10px;
      text-align:left;
    }
  </style>
</head>
<body>
  <center>
    <% if flash[:notice] %> 
      <% flash.each do |name,msg| %>
        <h3 style="color:green;"><%= msg %></h3>
      <% end %>
    <% end %>
    
    <table>
      <tr><td>First Name</td><td><%=@employee.first_name %></td></tr>
      <tr><td>Last Name</td><td><%=@employee.last_name %></td></tr>
      <tr><td>Email Id</td><td><%=@employee.email %></td></tr>
      <tr><td>Age</td><td><%=@employee.age %></td></tr>
      <tr><td>No of Order</td><td><%=@employee.no_of_order %></td></tr>
      <tr><td>Full Time Avaialable</td><td>
      <%if @employee.full_time_available%>
        Yes
      <%end%>
      <%if not @employee.full_time_available%>
        No
      <%end%>
      </td></tr>
      <tr><td>Salary</td><td><%=@employee.salary %></td></tr>
    </table>
    <br><br>
    <%= button_to "Edit Employee",  edit_employee_path , method: :get%>
    <%= button_to "Delete Employee",  employee_path , method: :delete%>
  </center>
</body>

<p>Find me in app/views/employees/show.html.erb</p>
